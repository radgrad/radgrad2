{
  "name": "radgrad2",
  "version": "2.0.21",
  "meteor": {
    "mainModule": {
      "client": "client/main.ts",
      "server": "server/main.ts"
    }
  },
  "private": true,
  "scripts": {
    "start": "meteor --no-release-check --exclude-archs web.browser.legacy,web.cordova --settings ../config/settings.development.json --port 3200",
    "start-custom": "meteor --no-release-check --exclude-archs web.browser.legacy,web.cordova --settings ../custom/settings.development.json --port 3200",
    "start-production": "meteor --no-release-check --exclude-archs web.browser.legacy,web.cordova --production  --settings ../config/settings.production.json --port 3200",
    "lint": "eslint --fix --quiet --ext .tsx --ext .ts ./imports && eslint --quiet --ext .js ./tests",
    "lint-console": "eslint --fix --ext .tsx --ext .ts ./imports",
    "test-unit": "cross-env TEST_BROWSER_DRIVER=puppeteer MOCHA_TIMEOUT=150000 meteor test --exclude-archs web.browser.legacy,web.cordova --no-release-check --once --driver-package meteortesting:mocha --port 3300",
    "test-integration": "cross-env TEST_BROWSER_DRIVER=puppeteer MOCHA_TIMEOUT=150000 meteor test --no-release-check --exclude-archs web.browser.legacy,web.cordova --full-app --once --driver-package meteortesting:mocha --port 3300",
    "test-acceptance-development": "testcafe chrome tests/tests.*.testcafe.js",
    "test-acceptance": "testcafe chrome:headless tests/*.testcafe.js -q --app \"meteor npm run start\"",
    "test-all": "meteor reset && meteor npm run lint && meteor npm run unimported && meteor npm run test-unit && meteor npm run test-integration && meteor npm run test-acceptance",
    "generate-docs": "npx jsdoc -c jsdoc.json",
    "gh-pages": "gh-pages -d ../api-docs",
    "unimported": "npx unimported",
    "prettier-format": "npx prettier -w ./imports/**/*.ts ./imports/**/*.tsx",
    "update-build-version": "npm version patch && npx ts-node ./update-build-version.ts"
  },
  "dependencies": {
    "@artsy/fresnel": "^1.3.1",
    "@babel/runtime": "^7.12.5",
    "bcrypt": "^5.0.0",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.8.0",
    "fibers": "^5.0.0",
    "highcharts": "^8.2.2",
    "highcharts-react-official": "^3.0.0",
    "history": "4.10.1",
    "immutable": "^4.0.0-rc.12",
    "meteor-node-stubs": "^1.0.1",
    "moment": "^2.29.1",
    "react": "^17.0.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-content-loader": "^6.0.1",
    "react-datepicker": "^3.4.1",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-markdown": "^5.0.3",
    "react-native": "^0.63.4",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scroll-up-button": "^1.6.4",
    "redux": "^4.0.5",
    "seamless-immutable": "^7.1.4",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "simpl-schema": "^1.10.2",
    "styled-components": "^5.2.1",
    "sweetalert2": "^10.13.0",
    "sweetalert2-react-content": "^3.2.2",
    "typesafe-actions": "^5.1.0",
    "uniforms": "^3.0.0",
    "uniforms-bridge-simple-schema-2": "^3.0.0",
    "uniforms-semantic": "^3.0.0"
  },
  "devDependencies": {
    "@babel/helper-call-delegate": "^7.12.1",
    "@hapi/joi": "^17.1.1",
    "@react-native-community/cli-debugger-ui": "^4.13.1",
    "@react-native-community/cli-types": "^4.10.1",
    "@stardust-ui/react-component-event-listener": "^0.40.0",
    "@stardust-ui/react-component-ref": "^0.40.0",
    "@types/chai": "^4.2.14",
    "@types/jasmine": "^3.6.3",
    "@types/lodash": "^4.14.168",
    "@types/meteor": "^1.4.65",
    "@types/meteor-roles": "^1.2.32",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-eslint": "^10.1.0",
    "better-docs": "^2.3.2",
    "chai": "^4.2.0",
    "chromedriver": "^88.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-meteor": "^7.2.2",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^4.1.0",
    "fast-check": "^2.12.0",
    "gh-pages": "^3.1.0",
    "jsdoc": "^3.6.6",
    "mocha": "^8.2.1",
    "prettier": "2.2.1",
    "puppeteer": "^5.5.0",
    "replace-in-file": "^6.1.0",
    "testcafe": "^1.10.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "settings": {
      "import/extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ],
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "meteor",
      "react"
    ],
    "extends": [
      "airbnb-typescript",
      "eslint:recommended",
      "plugin:meteor/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "react-app",
      "prettier",
      "prettier/react"
    ],
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    },
    "rules": {
      "arrow-parens": "off",
      "camelcase": "off",
      "class-methods-use-this": "off",
      "func-names": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "import/extensions": "off",
      "import/no-cycle": "warn",
      "import/no-unresolved": "off",
      "import/no-absolute-path": "off",
      "import/imports-first": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": "off",
      "indent": "off",
      "linebreak-style": "off",
      "lines-between-class-members": "off",
      "max-len": "off",
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": "off",
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "off",
            "error"
          ]
        }
      ],
      "no-plusplus": "off",
      "no-underscore-dangle": "off",
      "no-nested-ternary": "off",
      "no-shadow": "off",
      "no-unused-vars": "off",
      "no-useless-constructor": "off",
      "object-curly-newline": "off",
      "object-property-newline": "off",
      "object-shorthand": "off",
      "operator-linebreak": "off",
      "padded-blocks": "off",
      "prefer-arrow-callback": "off",
      "prefer-destructuring": "off",
      "prefer-promise-reject-errors": "off",
      "react/destructuring-assignment": "off",
      "react/jsx-closing-tag-location": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            "js",
            ".jsx",
            "ts",
            ".tsx"
          ]
        }
      ],
      "react/jsx-fragments": "off",
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-props-no-spreading": "off",
      "react/prefer-stateless-function": "off",
      "react/prop-types": "off",
      "react/require-default-props": "off",
      "react/sort-comp": "off",
      "@typescript-eslint/ban-ts-comment": "warn",
      "@typescript-eslint/naming-convention": "warn",
      "@typescript-eslint/lines-between-class-members": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-useless-constructor": "error"
    }
  },
  "prettier": {
    "printWidth": 240,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
